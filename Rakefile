# -*- ruby -*-

require 'rubygems'
require 'hoe'
require './lib/llvm/version.rb'

Hoe.new('llvm-ffi', FFI::LLVM::VERSION) do |p|
  p.rubyforge_name = 'llvm-ffi'
  p.developer('Postmodern','postmodern.mod3@gmail.com')
  p.remote_rdoc_dir = ''
  p.extra_deps = [['ffi', '>=0.4.0']]
end

